<% provide(:title, 'Edit teacher') %>
<h1>Edit teacher</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for @teacher, multiple: true do |f| %>
      <%= render '/shared/error_messages', object: f.object %>

      <%= f.label :name, "姓名", class: "name_label" %>
      <%= f.text_field :name %>

      <%= f.label :teacher_id, "工号" %>
      <%= f.text_field :teacher_id %>

	  <%= image_tag @teacher.picture.url if @teacher.picture? %>

      <%= f.label :picture, "图片" %>
	  <%= f.file_field :picture %>


      <%= f.label :remote_picture_url, "图片链接" %>
      <%= f.text_field :remote_picture_url %>

      <%= f.submit "提交", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

