<% provide(:title, 'New teacher') %>
<h1>New teacher</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for @teacher, multiple: true do |f| %>
      <%= render '/shared/error_messages', object: f.object %>

      <%= f.label :name, "姓名" %>
      <%= f.text_field :name %>

      <%= f.label :teacher_id, "工号" %>
      <%= f.text_field :teacher_id %>

      <%= f.label :picture, "图片" %>
	  <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>

	  <p>
		<label>My Avatar URL:</label>
		<%= image_tag(@teacher.picture_url) if @teacher.picture? %>
		<%= f.text_field :remote_picture_url %>
	  </p>

      <%= f.submit "提交", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $('#teacher_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
